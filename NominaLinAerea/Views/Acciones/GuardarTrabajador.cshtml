@model modeloTrabajadores;
@{
    ViewData["Title"] = "GuardarTrabajador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Registrar/Modificar Trabajador
    </div>
    <div class="card-body">
        <form asp-action="GuardarTrabajador" asp-controller="Acciones" method="post">
            <div class="mb-3">
                <label class="form-label">ID Trabajador:</label>
                <input asp-for="IdEmp_mod" type="number" class="form-control" />
                <span asp-validation-for="IdEmp_mod" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre del Trabajador:</label>
                <input asp-for="NomEmp_mod" type="text" class="form-control" />
                <span asp-validation-for="NomEmp_mod" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Apellido del Trabajador:</label>
                <input asp-for="ApaEmp_mod" type="text" class="form-control" />
                <span asp-validation-for="ApaEmp_mod" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Sexo:</label>
                <input asp-for="SexEmp_mod" type="text" class="form-control" placeholder="M o F" />
                <span asp-validation-for="SexEmp_mod" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Fecha de Nacimiento:</label>
                <input asp-for="FNaEmp_mod" type="date" class="form-control" />
                <span asp-validation-for="FNaEmp_mod" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">ID Barrio:</label>
                <input asp-for="IdBar_mod" type="number" class="form-control" />
                <span asp-validation-for="IdBar_mod" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">ID Puesto:</label>
                <input asp-for="IdPue_mod" type="number" class="form-control" />
                <span asp-validation-for="IdPue_mod" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">ID Tipo Trabajo:</label>
                <input asp-for="IdTipTra_mod" type="number" class="form-control" />
                <span asp-validation-for="IdTipTra_mod" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar Trabajador</button>
            <a asp-action="ListarTrabajadores" asp-controller="Acciones" class="btn btn-warning">
                Regresar a la Lista
            </a>
        </form>
    </div>
</div>

